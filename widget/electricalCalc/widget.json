{
  "name": "ElectricalCalc Organizer",
  "description": "Виджет-органайзер для одновременной работы с несколькими electrical виджетами (реализован на Web Components)",
  "version": "2.0.0",
  "author": "GristWidgets Community",
  "main": "index.html",
  "gristPlugin": {
    "type": "customWidget",
    "widget": {
      "name": "ElectricalCalc Organizer (Web Components)",
      "sections": ["single", "detail", "recordCard"],
      "supportsManualResize": true,
      "supportsManualColumnSelection": false,
      "description": "Органайзер для работы с деревом устройств, таблицами и однолинейными схемами через Web Components"
    }
  },
  "features": {
    "usesWebComponents": true,
    "layout": {
      "type": "flexbox",
      "leftPanel": "navigationTree",
      "rightPanel": "tabbedContent"
    },
    "embeddedComponents": [
      {
        "name": "Tree",
        "component": "element-tree",
        "position": "leftPanel"
      },
      {
        "name": "EditTable",
        "component": "element-edit-table",
        "position": "tab1",
        "tabTitle": "Таблица"
      },
      {
        "name": "OneLineSchema",
        "component": "element-one-line-schema",
        "position": "tab2",
        "tabTitle": "Однолинейная схема"
      }
    ]
  },
  "dependencies": {
    "css": ["./css/style.css"],
    "js": [
      "./js/element-tree.js",
      "./js/element-edit-table.js",
      "./js/element-one-line-schema.js",
      "./js/tabs.js"
    ],
    "externalLibraries": [
      "https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js",
      "https://cdnjs.cloudflare.com/ajax/libs/jstree/3.3.12/jstree.min.js",
      "https://cdnjs.cloudflare.com/ajax/libs/jstree/3.3.12/themes/default/style.min.css",
      "https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css",
      "https://unpkg.com/tabulator-tables@5.4.4/dist/css/tabulator.min.css",
      "https://unpkg.com/tabulator-tables@5.4.4/dist/js/tabulator.min.js"
    ]
  },
  "compatibility": {
    "gristVersion": ">=1.0.0",
    "browsers": ["Chrome", "Firefox", "Safari", "Edge"]
  }
}