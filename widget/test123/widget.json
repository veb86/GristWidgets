{
  "name": "Test123 Dashboard Selector",
  "description": "Виджет-селектор дашбордов с возможностью выбора и отображения различных внешних дашбордов через iframe",
  "version": "2.0.0",
  "author": "GristWidgets Community",
  "main": "index.html",
  "gristPlugin": {
    "type": "customWidget",
    "widget": {
      "name": "Test123 Dashboard Selector",
      "sections": ["single", "detail", "recordCard"],
      "supportsManualResize": true,
      "supportsManualColumnSelection": true,
      "requiredAccess": "read table",
      "columns": [
        {
          "name": "A",
          "title": "Dashboard Name",
          "type": "Text"
        },
        {
          "name": "B",
          "title": "Dashboard Link",
          "type": "Text"
        },
        {
          "name": "C",
          "title": "Width",
          "type": "Numeric"
        },
        {
          "name": "D",
          "title": "Height",
          "type": "Numeric"
        }
      ],
      "description": "Селектор дашбордов для отображения внешних ресурсов через iframe с настраиваемыми размерами"
    }
  },
  "features": {
    "layout": {
      "type": "vertical",
      "elements": [
        {
          "type": "selector",
          "name": "dashboardSelector",
          "height": "auto"
        },
        {
          "type": "iframe",
          "name": "dashboardFrame",
          "height": "fill"
        }
      ]
    }
  },
  "dependencies": {
    "css": ["./css/style.css"],
    "js": ["./grist-plugin-api.js"],
    "externalLibraries": [
      "https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js",
      "https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css",
      "https://unpkg.com/tabulator-tables@5.4.4/dist/css/tabulator.min.css",
      "https://unpkg.com/tabulator-tables@5.4.4/dist/js/tabulator.min.js"
    ]
  },
  "compatibility": {
    "gristVersion": ">=1.0.0",
    "browsers": ["Chrome", "Firefox", "Safari", "Edge"]
  }
}