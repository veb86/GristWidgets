{
  "name": "Test123 Organizer",
  "description": "Виджет-органайзер для одновременной работы с двумя табличными виджетами table1 и table2",
  "version": "1.0.0",
  "author": "GristWidgets Community",
  "main": "index.html",
  "gristPlugin": {
    "type": "customWidget",
    "widget": {
      "name": "Test123 Organizer (Two Column Layout)",
      "sections": ["single", "detail", "recordCard"],
      "supportsManualResize": true,
      "supportsManualColumnSelection": false,
      "description": "Органайзер для работы с двумя табличными виджетами в двухколоночном макете"
    }
  },
  "features": {
    "layout": {
      "type": "flexbox",
      "columns": 2,
      "leftColumn": "table1",
      "rightColumn": "table2"
    },
    "embeddedComponents": [
      {
        "name": "Table1",
        "component": "iframe",
        "position": "leftColumn",
        "src": "../table1/index.html",
        "title": "Table 1 Widget"
      },
      {
        "name": "Table2",
        "component": "iframe",
        "position": "rightColumn",
        "src": "../table2/index.html",
        "title": "Table 2 Widget"
      }
    ]
  },
  "dependencies": {
    "css": ["./css/style.css"],
    "js": [],
    "externalLibraries": [
      "https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js",
      "https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css",
      "https://unpkg.com/tabulator-tables@5.4.4/dist/css/tabulator.min.css",
      "https://unpkg.com/tabulator-tables@5.4.4/dist/js/tabulator.min.js"
    ]
  },
  "compatibility": {
    "gristVersion": ">=1.0.0",
    "browsers": ["Chrome", "Firefox", "Safari", "Edge"]
  }
}